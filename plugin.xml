<plugin id="fox.jason.pretty-dita" version="1.3.1">
	<feature extension="dita.conductor.lib.import" file="lib/prettydita-1.0.jar"/>
	
	<transtype abstract="false" desc="Prettify the DITA files for a given document" name="pretty-dita">
		<param name="args.indent" desc="How many characters to indent" type="enum">
			<val>1</val>
			<val>2</val>
			<val>3</val>
			<val default="true">4</val>
			<val>5</val>
			<val>6</val>
		</param>
		<param name="args.style" desc="Whether to indent using tabs or spaces" type="enum">
			<val>tabs</val>
			<val default="true">spaces</val>
		</param>
		<param name="args.require-pragma" type="enum"
			desc="Restrict the plug-in to only format files that contain a special comment">
			<val>true</val>
			<val default="true">false</val>
		</param>
		<param name="args.insert-pragma" type="enum"
			desc="Insert a special @format marker at the top of files specifying that the file
    has been formatted with the plugin">
			<val>true</val>
			<val default="true">false</val>
		</param>
		<param name="args.print-width" type="string"
			desc="Specify the line length that the printer will wrap on (default 80)" />
	</transtype>

	<!-- Import the pretty-dita transform's ANT file -->
	<feature extension="ant.import" file="build_dita2pretty-dita.xml"/>
	<!-- Ensure the plugin's error and logging messages are available -->
	<feature extension="dita.xsl.messages" file="resource/messages.xml"/>
	<!-- Add a template file to enable overrides to use extension points -->
	<template file="build_dita2pretty-dita_template.xml"/>

</plugin>
